<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	
	<class name="top.starcup.blog.domain.BlogInfo" table="bloginfo">
	<!-- 主键是属性id -->
		<id name="username">
			<generator class="assigned"></generator>
		</id>
		<property name="blogtitle" column="blogtitle"/>
		<property name="idiograph" column="idiograph"/>
		
	</class>
</hibernate-mapping>